<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
	  <%= f.input :name %>
	  <%= f.input :description, input_html: {cols: 60, rows: 5} %>
	  <%= f.input :price %>
	  <%= f.input :category_id, collection: Category.all %>
	  <%= f.input :photo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
