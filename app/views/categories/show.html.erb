<% content_for :title do %><%= @category.name %><% end %>

<% content_for :sidebar do %>
	<% if signed_in? %>
		<div><%= link_to 'Редактировать', edit_category_path(@category), :class => 'btn' %></div>
		<div><%= link_to 'Удалить', @category, :class => 'btn', :method => :delete %></div>
	<% end %>
<% end %>



<h1><%= @category.name %></h1>

<table class="table">
<% @category.items.each do |item| %>
	<tr>
		<td><%= link_to image_tag(item.photo(:thumb)), item %></td>
		<td><%= link_to item.name, item %></td>
		<td><%= item.price %></td>
	</tr>
<% end %>
</table>

<p><%= link_to "Назад", categories_path %></p>